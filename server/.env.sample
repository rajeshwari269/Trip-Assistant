# ======================================
# SERVER ENVIRONMENT VARIABLES
# ======================================
# Copy this file to .env and fill in your actual values
# Do not commit .env file to version control

# ======================================
# DATABASE CONFIGURATION
# ======================================

# MySQL Database Connection
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=your_secure_database_password_here
DB_NAME=tripPlannerDB

# Database Port (optional, defaults to 3306)
DB_PORT=3306

# ======================================
# API KEYS
# ======================================

# Pexels API Key
# Get your free API key from: https://www.pexels.com/api/
# Required for fetching place images in more-places functionality
PEXELS_API_KEY=your_pexels_api_key_here

# ======================================
# SERVER CONFIGURATION
# ======================================

# Server Port
PORT=5000

# Node Environment
# Values: development, production, test
NODE_ENV=development

# ======================================
# SECURITY SETTINGS
# ======================================

# JWT Secret (if implementing authentication)
# Must be at least 32 characters long and cryptographically secure.
# Example (do not use in production): JWT_SECRET=your_super_long_and_random_jwt_secret_key_123456
JWT_SECRET=

# Session Secret (if using sessions)
SESSION_SECRET=your_session_secret_here

# ======================================
# CORS SETTINGS
# ======================================

# Frontend URL for CORS (production)
CLIENT_URL=http://localhost:5173

# Allowed Origins (comma-separated for multiple origins)
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000